{{- $m := dict
  "subject" "This was generated by layouts/_default/home.json.json"
  "siteTitle" site.Title
 }}

{{- $s := slice }}
{{- range (where site.RegularPages "Type" "posts").ByTitle }}
  {{- $s = $s | append (dict
    "title" .Title
    "date" .PublishDate
    "permalink" .Permalink
    )
  }}
{{- end }}

{{- $m = merge $m (dict "pages" $s) }}
{{- jsonify (dict "indent" "  ") $m }}
